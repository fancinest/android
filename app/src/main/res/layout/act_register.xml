<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dlzc_pic_bj"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:background="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ln_top"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="42dp"
                    android:text="注册"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="35dp"
                    android:src="@mipmap/dlzc_cha" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ln_center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textColorHint="@color/white">

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/prompt_username"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="17sp" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="29dp"
                    android:background="@color/white"></View>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_psd"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textColorHint="@color/white">

                    <EditText
                        android:id="@+id/et_psd"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="17sp" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="29dp"
                    android:background="@color/white"></View>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_repeat_psd"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textColorHint="@color/white">

                    <EditText
                        android:id="@+id/et_repeat_psd"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="17sp" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="29dp"
                    android:background="@color/white"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:textColorHint="@color/white">

                        <EditText
                            android:id="@+id/et_verify_code"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="验证码"
                            android:inputType="number"
                            android:maxLength="4"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="17sp" />

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_get_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="38dp"
                        android:background="@drawable/round_corner_gradient"
                        android:clickable="true"
                        android:paddingBottom="6dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        android:text="发送验证码"
                        android:textColor="@color/clickable_green_grey"
                        android:textSize="11sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="29dp"
                    android:background="@color/white"></View>

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/round_corner_gradient"
                    android:gravity="center"
                    android:text="@string/complete"
                    android:textColor="@color/clickable_green_grey"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/ln_center"
                android:gravity="center">

                <CheckedTextView
                    android:id="@+id/ctv_is_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:drawableLeft="@drawable/team_checkedbox"
                    android:drawablePadding="8dp"
                    android:text="我已阅读并同意"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="《那然公社用户服务协定》"
                    android:textColor="@color/clickable_green_grey"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>