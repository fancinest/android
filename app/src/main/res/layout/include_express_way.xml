<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_check_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="配送方式"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <CheckedTextView
                android:id="@+id/ctv_yes"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_express_way"
                android:checked="true"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="到付"
                android:textAlignment="center"
                android:textColor="@color/clickable_grey_white" />

            <CheckedTextView
                android:id="@+id/ctv_no"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:background="@drawable/selector_express_way"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="自取"
                android:textAlignment="center"
                android:textColor="@color/clickable_grey_white" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_eeeeee"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="是否匿名？" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv2"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <CheckedTextView
                android:id="@+id/ctv_yes_anonymous"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_yes_no"
                android:checked="true"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="是"
                android:textAlignment="center"
                android:textColor="@color/clickable_grey_white" />

            <CheckedTextView
                android:id="@+id/ctv_no_anonymous"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:background="@drawable/selector_yes_no"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="否"
                android:textAlignment="center"
                android:textColor="@color/clickable_grey_white" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>