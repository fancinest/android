<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="40dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="50dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:scaleType="centerInside"
                android:src="@drawable/chongwu_pic_jingqingqidai1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_marginTop="50dp"
                android:scaleType="centerInside"
                android:src="@drawable/chongwu_pic_jingqingqidai2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_marginTop="50dp"
                android:scaleType="centerInside"
                android:src="@drawable/chongwu_pic_jingqingqidai3" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_marginTop="50dp"
                android:scaleType="centerInside"
                android:src="@drawable/chongwu_pic_jingqingqidai4" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_marginTop="50dp"
                android:scaleType="centerInside"
                android:src="@drawable/chongwu_pic_jingqingqidai5" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>