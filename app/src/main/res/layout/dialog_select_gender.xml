<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/baomi_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_corner_grey_line_white_content"
        android:clickable="true"
        android:gravity="center"
        android:minHeight="40dp"
        android:padding="5dp"
        android:text="取消"
        android:textColor="@color/clickable_gray_dark"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/baomi_text"
        android:background="@drawable/round_corner_grey_line_white_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="请选择性别"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ebebeb" />

        <TextView
            android:id="@+id/boy_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="男"
            android:textColor="@color/clickable_gray_dark"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ebebeb" />

        <TextView
            android:id="@+id/girl_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="女"
            android:textColor="@color/clickable_gray_dark"
            android:textSize="14sp" />
    </LinearLayout>


</RelativeLayout>