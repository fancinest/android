<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/ln_tool"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ln_collect"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_wish_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="false"
            android:drawableLeft="@mipmap/list_btn_shoucang_gre"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="30"
            android:textColor="@color/color_666666"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_comment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_wish_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:drawableLeft="@mipmap/list_btn_pinglun_blu"
            android:drawablePadding="8dp"
            android:text="30"
            android:textColor="@color/color_666666"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_like"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_wish_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:drawableLeft="@mipmap/list_btn_zan"
            android:drawablePadding="8dp"
            android:text="30"
            android:textColor="@color/color_666666"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>