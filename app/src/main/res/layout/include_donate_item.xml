<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ln_donate_include"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="新旧程度"
            android:textColor="@color/color_666666"
            android:textSize="15sp" />

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/tagFlow_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            zhy:max_select="1" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/color_eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="预估重量"
            android:textColor="@color/color_666666"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_weight"
            android:layout_width="68dp"
            android:layout_height="24dp"
            android:background="@drawable/round_circle_line"
            android:gravity="right"
            android:inputType="numberDecimal"
            android:paddingLeft="4dp"
            android:paddingRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:text="kg" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/color_eeeeee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="捐赠物品的价格"
            android:textColor="@color/color_666666"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_price"
                android:layout_width="68dp"
                android:layout_height="24dp"
                android:background="@drawable/round_circle_line"
                android:gravity="right"
                android:inputType="numberDecimal"
                android:paddingLeft="4dp"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="元" />

            <CheckedTextView
                android:id="@+id/ctv_no_clear"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:background="@drawable/selector_yes_no"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="不清楚"
                android:textAlignment="center"
                android:textColor="@color/clickable_grey_white" />

            <CheckedTextView
                android:id="@+id/ctv_forget"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:background="@drawable/selector_yes_no"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="忘记了"
                android:textAlignment="center"
                android:textColor="@color/clickable_grey_white" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/color_eeeeee" />

</LinearLayout>